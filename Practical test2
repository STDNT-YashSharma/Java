package practical.test;

import java.util.Scanner;
class Count{

public int count7(int n){
    int counter = 0;
    while(n!=0)
    {
    if (n % 10 == 7) counter++;
    if (n / 10 == 0) return counter;
   
}
}

public class Main{
    public static void main(String[] args) {
        int s,a;
        Scanner s1=new Scanner(System.in);
        Count s2=new Count();
        System.out.println("Enter the number");
        s=s1.nextInt();
       
    a=s2.count7(s);
}
}
